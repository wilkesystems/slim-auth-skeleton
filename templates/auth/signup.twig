{% extends 'layouts/app.twig' %}

{% block content %}
      <div class="signup">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
              <div class="panel-heading">Sign up</div>
              <div class="panel-body">
                <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                  <div class="form-group{{ errors.first_name ? ' ui-error has-error'}} ui-required">
                    <label for="name">First Name</label>
                    <input type="text" name="first_name" id="firstname" class="form-control" value="{{ values.first_name }}">
{% if errors.first_name %}
                    <span class="help-block">{{ errors.first_name | first }}</span>
{% endif %}
                  </div>
                  <div class="form-group{{ errors.last_name ? ' ui-error has-error'}} ui-required">
                    <label for="name">Last Name</label>
                    <input type="text" name="last_name" id="lastname" class="form-control" value="{{ values.last_name }}">
{% if errors.last_name %}
                    <span class="help-block">{{ errors.last_name | first }}</span>
{% endif %}
                  </div>
                  <div class="form-group{{ errors.email ? ' ui-error has-error'}} ui-required">
                    <label for="email">E-Mail</label>
                    <input type="email" name="email" id="email" class="form-control" value="{{ values.email }}">
{% if errors.email %}
                    <span class="help-block">{{ errors.email | first }}</span>
{% endif %}
                  </div>
                  <div class="form-group{{ errors.password ? ' ui-error has-error'}} ui-required">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control">
{% if errors.password %}
                    <span class="help-block">{{ errors.password | first }}</span>
{% endif %}
                  </div>
                  <input type="hidden" name="{{ csrf.name_key }}" value="{{ csrf.name }}">
                  <input type="hidden" name="{{ csrf.value_key }}" value="{{ csrf.value }}">
                  <button type="submit" class="btn btn-default">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
{% endblock %}
{% extends 'layouts/app.twig' %}

{% block content %}
      <div class="signin">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
              <div class="panel-heading">Sign in</div>
              <div class="panel-body">
                <form action="{{ path_for('auth.signin') }}" method="post">
                  <div class="form-group{{ errors.email ? ' ui-error has-error'}}">
                    <label for="email">E-Mail</label>
                    <input type="text" name="email" id="email" class="form-control">
{% if errors.email %}
                    <span class="help-block">{{ errors.email | first }}</span>
{% endif %}
                  </div>
                  <div class="form-group{{ errors.password ? ' ui-error has-error'}}">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control">
{% if errors.password %}
                    <span class="help-block">{{ errors.password | first }}</span>
{% endif %}
                  </div>
                  <input type="hidden" name="{{ csrf.name_key }}" value="{{ csrf.name }}">
                  <input type="hidden" name="{{ csrf.value_key }}" value="{{ csrf.value }}">
                  <button type="submit" class="btn btn-default">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
{% endblock %}